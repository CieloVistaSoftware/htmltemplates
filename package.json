{
  "name": "html-editor",
  "version": "1.0.0",
  "description": "Visual HTML Editor with drag-and-drop interface",
  "main": "src/main.js",
  "type": "commonjs",
  "scripts": {
    "prestart": "node scripts/create-directories.js",
    "start": "node server.js",
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:frontend\"",
    "dev:server": "nodemon server.js",
    "dev:frontend": "vite",
    "build": "vite build",
    "lint": "eslint src/**/*.js",
    "test": "jest"
  },
  "dependencies": {
    "express": "^4.18.2",
    "fs-extra": "^11.3.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "vite": "^4.5.14"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  }
}
